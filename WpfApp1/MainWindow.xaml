<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Race simulator van Wafoe" Height="450" Width="800">
    <Grid>
        <Image x:Name="TrackScreen" Margin="20,20,0,20" HorizontalAlignment="Left"/>
        <DockPanel LastChildFill="False" Margin="0,0,0,414" Background="#FFD4D4D4">
            <Menu Margin="0,0,718,414" Height="20" DockPanel.Dock="Top" Width="800">
                <MenuItem Header="Menu">
                    <MenuItem Header="Statistieken huidige race"/>
                    <MenuItem Header="Simulatie sluiten"/>
                    <MenuItem Header="Statistieken deelnemers"/>
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</Window>

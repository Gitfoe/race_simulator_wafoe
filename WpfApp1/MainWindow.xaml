<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Race simulator van Wafoe" Height="450" Width="800">
    <Grid>
        <Image x:Name="TrackScreen" Margin="20,31,0,9" HorizontalAlignment="Left"/>
        <DockPanel LastChildFill="False">
            <Menu Height="20" DockPanel.Dock="Top" Width="800">
                <MenuItem Header="Menu">
                    <MenuItem Header="Statistics current race" Click="MenuItem_CurrentRaceStatistics_Click"/>
                    <MenuItem Header="Statistics participants" Click="MenuItem_ParticipantStatistics_Click"/>
                    <MenuItem Header="Close simulation" Click="MenuItem_Exit_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</Window>
